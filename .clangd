# Apply this config conditionally to all C++ files
If:
  PathMatch: .*\.(c|h)pp
CompileFlags:
  Compiler: /usr/bin/clang

---

# Apply this config conditionally to all CUDA files
If:
  PathMatch: .*\.cuh?
CompileFlags:
  Compiler: /opt/cuda/bin/nvcc

---

# Tweak the clangd parse settings for all files
CompileFlags:
  Add:
    - "--cuda-path=/opt/cuda"
    # report all errors
    - "-ferror-limit=0"
    # include directories
    - "-I../include"
    - "-I../work1/include"
    - "-I../../work1/include"
    - "-I../../../misc/cuda_timer/include"
  Remove:
    # strip CUDA fatbin args
    - "-Xfatbin*"
    # strip CUDA arch flags
    - "-gencode*"
    - "--generate-code*"
    # strip CUDA flags unknown to clang
    - "-ccbin*"
    - "--compiler-options*"
    - "--expt-extended-lambda"
    - "--expt-relaxed-constexpr"
    - "-forward-unknown-to-host-compiler"
    - "-Werror=cross-execution-space-call"
    - "-Xcompiler=-fPIC"
    - "--options-file"
    - "-rdc=true"
    - "-rdc=false"
    - "-arch=native"
Hover:
  ShowAKA: No
InlayHints:
  Enabled: No
Diagnostics:
  Suppress:
    - "variadic_device_fn"
    - "attributes_not_allowed"
